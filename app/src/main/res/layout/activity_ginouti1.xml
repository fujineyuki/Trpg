<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <EditText
        android:id="@+id/NameField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="238dp"
        android:layout_marginTop="70dp"
        android:columnCount="8"
        android:rowCount="5"
        app:layout_constraintBottom_toTopOf="@+id/ginouti"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">


        <TextView
            android:id="@+id/StrText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:text="18" />

        <TextView
            android:id="@+id/DexText"
            android:layout_column="3"
            android:layout_row="0"
            android:text="18" />

        <TextView
            android:id="@+id/IntText"
            android:layout_column="5"
            android:layout_row="0"
            android:text="18" />

        <TextView
            android:id="@+id/ConText"
            android:layout_column="7"
            android:layout_row="0"
            android:text="18" />

        <TextView
            android:id="@+id/AppText"
            android:layout_width="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:text="18" />

        <TextView
            android:id="@+id/PowText"
            android:layout_column="3"
            android:layout_row="1"
            android:text="18" />

        <TextView
            android:id="@+id/SizText"
            android:layout_column="5"
            android:layout_row="1"
            android:text="18" />

        <TextView
            android:id="@+id/EduText"
            android:layout_column="7"
            android:layout_row="1"
            android:text="21" />

        <TextView
            android:id="@+id/dbText"
            android:layout_column="1"
            android:layout_row="2"
            android:text="+1d4 " />

        <TextView
            android:id="@+id/HpText"
            android:layout_column="3"
            android:layout_row="2"
            android:text="18" />

        <TextView
            android:id="@+id/MpText"
            android:layout_column="5"
            android:layout_row="2"
            android:text="18" />

        <TextView
            android:id="@+id/SanText"
            android:layout_column="7"
            android:layout_row="2"
            android:text="90" />

        <TextView
            android:id="@+id/IdeaText"
            android:layout_column="1"
            android:layout_row="3"
            android:text="90 " />

        <TextView
            android:id="@+id/KnowledgeText"
            android:layout_column="3"
            android:layout_row="3"
            android:text="99 " />

        <TextView
            android:id="@+id/FortuneText"
            android:layout_column="5"
            android:layout_row="3"
            android:text="90 " />

        <TextView
            android:id="@+id/MaxSanText"
            android:layout_column="7"
            android:layout_row="3"
            android:text="99" />


        <Button
            android:id="@+id/STRButton"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:text="STR" />

        <Button
            android:id="@+id/APPButton"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:text="APP" />

        <Button
            android:id="@+id/DBButton"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:text="DB"
            tools:layout_editor_absoluteX="177dp"
            tools:layout_editor_absoluteY="240dp" />

        <Button
            android:id="@+id/DEXButton"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="0"
            android:text="DEX" />

        <Button
            android:id="@+id/INTButton"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_row="0"
            android:text="INT" />

        <Button
            android:id="@+id/CONButton"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_column="6"
            android:layout_row="0"
            android:text="CON" />

        <Button
            android:id="@+id/POWButton"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="1"
            android:text="POW" />

        <Button
            android:id="@+id/IdeaButton"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:text="アイ ディア" />

        <Button
            android:id="@+id/HPButton"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="2"
            android:text="HP" />

        <Button
            android:id="@+id/KnowledgeButton"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="3"
            android:text="知識" />

        <Button
            android:id="@+id/SIZButton"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_row="1"
            android:text="SIZ" />

        <Button
            android:id="@+id/MPButton"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_row="2"
            android:text="MP" />

        <Button
            android:id="@+id/EDUButton"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_column="6"
            android:layout_row="1"
            android:text="EDU" />

        <Button
            android:id="@+id/SANButton"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_column="6"
            android:layout_row="2"
            android:text="SAN" />

        <Button
            android:id="@+id/FortuneButton"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_row="3"
            android:text="幸運" />


        <Button
            android:id="@+id/MAXSANButton"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_column="6"
            android:layout_row="3"
            android:text="最大　SAN"
            tools:layout_editor_absoluteX="272dp"
            tools:layout_editor_absoluteY="208dp" />

        <Button
            android:id="@+id/ALLButton"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_columnSpan="8"
            android:layout_row="4"
            android:text="一括作成"
            tools:layout_editor_absoluteX="17dp"
            tools:layout_editor_absoluteY="262dp" />

    </GridLayout>



    <Button
        android:id="@+id/ginouti"
        android:layout_width="352dp"
        android:layout_height="57dp"
        android:layout_gravity="top"
        android:layout_marginTop="8dp"
        android:text="技能値一覧へ"
        app:layout_constraintBottom_toTopOf="@+id/itemText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/itemText"
        android:layout_width="353dp"
        android:layout_height="50dp"
        android:text="所持品一覧へ"
        app:layout_constraintBottom_toTopOf="@+id/jyumonText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ginouti" />

    <Button
        android:id="@+id/jyumonText"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="呪文一覧へ"
        app:layout_constraintBottom_toTopOf="@+id/hozon"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemText"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/hozon"
        android:layout_width="352dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="保存"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jyumonText"
        app:layout_constraintVertical_bias="1.0" />



</android.support.constraint.ConstraintLayout>