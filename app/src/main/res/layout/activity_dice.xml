<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#ffffff">

    <Button
        android:id="@+id/button100"
        android:text="1D100"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/kahendaisu"
        android:layout_width="90dp"
        android:layout_alignLeft="@+id/kahensu"
        android:layout_alignStart="@+id/kahensu"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/text2"
        android:textSize="30dp"
        android:textColor="@color/colorAccent"
        android:layout_width="300dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/button100"
        android:layout_toStartOf="@+id/button100"
        android:layout_above="@+id/kahensu"
        android:layout_height="100dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/kahensu"
        android:text="可変ダイス"
        android:layout_below="@+id/button100"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:id="@+id/kahenkosuu"
        android:textSize="5dp"
        android:layout_width="125dp"
        android:layout_below="@+id/text2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="100dp"
        android:layout_toLeftOf="@+id/kahendaisu"
        android:layout_toStartOf="@+id/kahendaisu" />

    <Spinner
        android:id="@+id/zyudouSp"
        android:layout_height="100dp"
        android:layout_width="125dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/textView6"
        android:layout_toStartOf="@+id/textView6" />

    <TextView
        android:text="受動"
        android:layout_height="50dp"
        android:textSize="24sp"
        android:textColor="@color/colorPrimary"
        android:layout_width="125dp"
        android:layout_below="@+id/kahenkosuu"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="能動"
        android:layout_height="50dp"
        android:id="@+id/textView6"
        android:textSize="24sp"
        android:textColor="@color/colorPrimary"
        android:layout_width="125dp"
        android:layout_below="@+id/kahendaisu"
        android:layout_toRightOf="@+id/kahenkosuu"
        android:layout_toEndOf="@+id/kahenkosuu" />

    <Spinner
        android:entries="@array/list1"
        android:textSize="5dp"
        android:id="@+id/kahendaisu"
        android:layout_width="125dp"
        android:layout_height="100dp"
        android:layout_below="@+id/text2"
        android:layout_toLeftOf="@+id/kahensu"
        android:layout_toStartOf="@+id/kahensu" />

    <Spinner
        android:id="@+id/noudouSp"
        android:layout_height="100dp"
        android:layout_width="125dp"
        android:layout_below="@+id/textView6"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <Button
        android:text="対抗ダイス"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="18sp"
        android:id="@+id/taikoudaisu"
        android:layout_below="@+id/textView6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>